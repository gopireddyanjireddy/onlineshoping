@model IEnumerable<website2.Product1>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<br />
<br />

<p>
    <h2 style="background-image: url('https://opticalcortex.com/app/uploads/2014/08/grad.jpg')">List Of Products</h2>
</p>
<table class="table" style="background-image: url('https://cdn.hipwallpaper.com/i/18/55/EQKhGN.png'); color: #FFFFFF; ">
    <tr>
        <th>
            <h4>Product-Id</h4>
        </th>
        <th>
            <h4>Product-Type</h4>
        </th>
        <th>
            <h4>Product-Name</h4>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.pprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pdiscount)
            </th>*@
        <th>
            <h4>Product-Image</h4>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="7" style="background-color:whitesmoke;color:black">
                <h4>Sorry....! No Matches are Available Right Now....</h4>
            </td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ptype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pname)
            </td>
            <td>
                <b><span>&#8377;</span>@Html.DisplayFor(modelItem => item.pprice)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.prating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pdiscount)
                </td>*@
            <td>
                <img src="@Url.Content(item.pimage)" height="100" width="100"
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
            <td class="btn btn-outline-primary" style="margin-top:50px">

                <i class="fa fa-asterisk" aria-hidden="true"></i>@Html.ActionLink("Details", "Details", new { id = item.pId })

            </td>
        </tr>
    }

</table>
