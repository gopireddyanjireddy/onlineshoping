<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online-Shoping</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
<link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"style="background-image: url('https://cdn.wallpapersafari.com/19/90/kGC79i.png')">
        <div class="container">
            <div class="navbar-header" style="font-size:20px;font-family:cursive">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <i class="fa fa-cart-plus" aria-hidden="true"></i>@Html.ActionLink("Premier-Mart", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <img src="https://th.bing.com/th?q=Shopping+Icon+Blue&w=120&h=120&c=1&rs=1&qlt=90&cb=1&dpr=1.25&pid=InlineBlock&mkt=en-IN&cc=IN&setlang=en&adlt=moderate&t=1&mw=247" style="width:50px;padding-bottom:10px" />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left" style="padding:10px">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("ViewProducts", "Index", "Product")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right" style="padding:10px">
                    <li>@Html.ActionLink("Login", "Login", "Product")</li>
                    <li>@Html.ActionLink("Registration", "Reg", "Product")</li>
                </ul>


                <div>
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                    {
                        <ul class="nav navbar-nav navbar-right" style="margin-bottom:10px">
                            <li style="height:10px">
                                @Html.TextBox("search")
                                <input type="submit" value="Search" style="margin-bottom:15px" />

                            </li>

                        </ul>

                    }
                </div>


                @*<from>
              <br/>
              <input type="Search" placeholder="Enter Productname" style="width:300px;"/>
              <input type="button" value="Search" class="btn btn-outline-success" style="margin-bottom:15px" />

        </from>*@
            </div>
        
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <section>
            <footer class="bg-teal text-center text-white" style="background-image: url('https://i.stack.imgur.com/jGlzr.png') ">
                <div class="container" >
                    <div class="row">
                        <div class="col" style="margin:50px">
                            <h3>
                                Copyrights &copy; 2021, Online Shoping
                            </h3>
                            <h6>All Rights Reserved</h6>
                            <h6>Developed & Maintained by Hcl-Tech Employees</h6>
                            <i class="fab fa-facebook-square fa-2x m-1"></i>
                            <i class="fab fa-youtube fa-2x m-1"></i>
                            <i class="fab fa-twitter fa-2x m-1"></i>
                            <i class="fab fa-google-plus-square fa-2x m-1"></i>
                        </div>
                    </div>
                </div>
            </footer>
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
